{
  "info": {
    "_postman_id": "YOUR_UNIQUE_ID",
    "name": "PHP Social App (Complete)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Actions",
      "item": [
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "body": { "mode": "formdata", "formdata": [{"key": "first_name", "value": "Test"}, {"key": "last_name", "value": "User"}, {"key": "email", "value": "test@example.com"}, {"key": "username", "value": "testuser"}, {"key": "password", "value": "password123"}] },
            "url": "http://localhost:8080/register.php"
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const sessionId = pm.cookies.get('PHPSESSID');",
                  "if (sessionId) {",
                  "    pm.environment.set(\"session_cookie\", \"PHPSESSID=\" + sessionId);",
                  "    console.log(\"Session cookie saved!\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": { "mode": "formdata", "formdata": [{"key": "username", "value": "testuser"}, {"key": "password", "value": "password123"}] },
            "url": "http://localhost:8080/login.php"
          }
        },
        {
          "name": "View Profile (Find by ID)",
          "request": {
            "method": "GET",
            "header": [{"key": "Cookie", "value": "{{session_cookie}}"}],
            "url": "http://localhost:8080/profile.php"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "POST",
            "header": [{"key": "Cookie", "value": "{{session_cookie}}"}],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "first_name", "value": "UpdatedFirstName"},
                {"key": "last_name", "value": "UpdatedLastName"},
                {"key": "email", "value": "updated@example.com"},
                {"key": "username", "value": "updated_username"}
              ]
            },
            "url": "http://localhost:8080/update_profile.php"
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "GET",
            "header": [{"key": "Cookie", "value": "{{session_cookie}}"}],
            "url": "http://localhost:8080/logout.php"
          }
        }
      ]
    },
    {
      "name": "Post Actions",
      "item": [
        {
          "name": "View Main Feed (Get All Posts)",
          "request": {
            "method": "GET",
            "header": [{"key": "Cookie", "value": "{{session_cookie}}"}],
            "url": "http://localhost:8080/index.php"
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [{"key": "Cookie", "value": "{{session_cookie}}"}],
            "body": { "mode": "formdata", "formdata": [{"key": "post_text", "value": "This is a test post from Postman!"}] },
            "url": "http://localhost:8080/create_post.php"
          }
        }
      ]
    }
  ],
  "event": []
}